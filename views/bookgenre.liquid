{% render 'partials/head.liquid', title: 'Squad page' %}

<main class="main-kitchen">

    <h1 class="heading-dish">Wat is het favoriete gerecht van de squad leden?</h1>

    <ul class="squad-kitchen">
        {% for person in persons %}
            <li class="card">
                <img src="{{ person.avatar }}" alt="Profile Image">
                <h2>{{ person.name }}</h2>
                <p>{{ person.fav_book_ }}</p>
            </li>
        {% endfor %}
    </ul>

</main>

{% render 'partials/foot.liquid', squads: squads %}
