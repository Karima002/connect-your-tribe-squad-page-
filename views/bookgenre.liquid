{% render 'partials/head.liquid', title: 'Squad page' %}

<main class="main-kitchen">

    <h1 class="heading-dish">Wat de favoriete bookgenre van de squad leden?</h1>

    <ul class="squad-kitchen">
        {% for person in persons %}
            <li class="card">
                {% comment %} Als person.avatar is niet gelijk aan 'niks' en person.avatar is niet gelijk aan null toon dan de avatar {% endcomment %}
                {% if person.avatar != "" and person.avatar != null %} 
                    <img src="{{ person.avatar }}" alt="profile Image">
                {% comment %} Anders laad de standaard github_handle in {% endcomment %}
                {% else %}
                    <img src="https://github.com/{{ person.github_handle }}.png">
                {% comment %} Einde if state {% endcomment %}
                {% endif %}
                <h2>{{ person.name }}</h2>
                <p>{{ person.fav_book_genre }}</p>
            </li>
        {% endfor %}
    </ul>

</main>

{% render 'partials/foot.liquid', squads: squads %}
